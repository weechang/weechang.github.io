.tools
  margin-top: 40px

.tools .category-title
  color : color-title
  font-size: 1.1rem
  margin-bottom: 10px
  margin-left: 20px

.tools .tool-row
  display: flex
  margin-right: -20px
  @media mq-mobile
    flex-direction: column
    -webkit-justify-content:center
    justify-content:center
    -webkit-align-items:center
    align-items:center
  @media mq-mini
    flex-direction: column
    -webkit-justify-content:center
    justify-content:center
    -webkit-align-items:center
    align-items:center

.tool-row .tool-item
  flex: 1
  padding: 10px 14px
  border: 1px solid #DEDEDE
  border-radius: 5px
  background: #FFFFFF
  margin-bottom: 20px
  @media mq-normal
    margin-right: 20px
  @media mq-tablet
    margin-right: 20px
  @media mq-mobile
    max-width: 250px
  @media mq-mini
    max-width: 250px

.tool-row .tool-item:last-child
  margin-right: 0

.tool-row .no-item
  background: #F5F8F9!important
  border: 1px solid #F5F8F9!important

.tool-item .tool-name
  font-weight: bold
  font-size: 1.5rem
  text-align: center

.tool-item .tool-content
  margin-top: 10px
  height: 120px
  display: flex

.tool-content .tool-logo
  margin-top: 20px
  float: left

.tool-logo .logo-img
  width: 64px
  margin-right: 14px

.tool-content .tool-desc
  flex: 1
  float: right
  text-align: left
  color: #888888

.tool-item .tool-footer
  text-align: center
  margin: auto

.tool-footer .tool-btn
  height: 40px
  line-height: 40px
  width: 100px
  border: 1px solid #49c8fb
  border-radius: 5px
  padding: 5px 15px
  font-weight: bold
